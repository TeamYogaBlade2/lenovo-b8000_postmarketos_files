# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm/configs/(CHANGEME!)

pkgname=linux-lenovo-b8000
pkgver=6.16
pkgrel=0
pkgdesc="Lenovo YOGA Tablet 10 kernel fork"
arch="armv7"
_carch="arm"
_flavor="lenovo-b8000"
url="https://github.com/TeamYogaBlade2/linux"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="
	gcc-arm-none-eabi
	bash
	bc
	bison
	devicepkg-dev
	findutils
	flex
	openssl-dev
	perl
	grep
"

#makedepends="bash bc bison devicepkg-dev flex openssl-dev perl gmp-dev mpc1-dev mpfr-dev findutils postmarketos-installkernel"

# Source
_repository="linux"
_commit="4ec9bf60020cfce06c99fa498cfd2779ed706f30"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/TeamYogaBlade2/$_repository/archive/$_commit.tar.gz
	$_config
"
builddir="$srcdir/$_repository-$_commit"

prepare() {
	default_prepare
}

build() {
	unset LDFLAGS

	export ARCH="$_carch"
	export CROSS_COMPILE=arm-none-eabi-

	# hack, it shouldn't be here
	export MAKEFLAGS="-j$(nproc)"
	make lenovo-blade_defconfig

	make KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	mkdir -p "$pkgdir"/boot
	make zinstall modules_install dtbs_install \
		ARCH="$_carch" \
		INSTALL_MOD_STRIP=1 \
		INSTALL_PATH="$pkgdir"/boot \
		INSTALL_MOD_PATH="$pkgdir" \
		INSTALL_DTBS_PATH="$pkgdir/usr/share/dtb"

	install -D "$builddir"/include/config/kernel.release \
		"$pkgdir/usr/share/kernel/$_flavor/kernel.release"
}

